<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service
            id="bitbag_sylius_upselling_plugin.finder.related_products.abstract"
            class="BitBag\SyliusUpsellingPlugin\Finder\AbstractRelatedProductsFinder"
        >
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="bitbag_sylius_upselling_plugin.repository.product" />
        </service>

        <service
            id="bitbag_sylius_upselling_plugin.finder.related_products.combined"
            class="BitBag\SyliusUpsellingPlugin\Finder\RelatedProductsCombinedFinder"
            parent="bitbag_sylius_upselling_plugin.finder.related_products.abstract"
        >
            <argument type="service" id="bitbag_sylius_upselling_plugin.finder.related_products.order_history" />
            <argument type="service" id="bitbag_sylius_upselling_plugin.finder.related_products.taxons" />
        </service>

        <service
            id="bitbag_sylius_upselling_plugin.finder.related_products"
            alias="bitbag_sylius_upselling_plugin.finder.related_products.combined"
        />

        <service
            id="bitbag_sylius_upselling_plugin.finder.related_products.order_history"
            class="BitBag\SyliusUpsellingPlugin\Finder\RelatedProductsByOrderHistoryFinder"
            parent="bitbag_sylius_upselling_plugin.finder.related_products.abstract"
        >
            <argument type="service" id="bitbag_sylius_upselling_plugin.query_builder.related_products.order_history" />
            <argument type="service" id="fos_elastica.finder.bitbag_related_products.default" />
        </service>

        <service
            id="bitbag_sylius_upselling_plugin.finder.related_products.taxons"
            class="BitBag\SyliusUpsellingPlugin\Finder\RelatedProductsByTaxonsFinder"
            parent="bitbag_sylius_upselling_plugin.finder.related_products.abstract"
        />
    </services>
</container>
