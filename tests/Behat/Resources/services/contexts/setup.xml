<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service
            id="bitbag_sylius_upselling_plugin.behat.context.setup.related_products"
            class="Tests\BitBag\SyliusUpsellingPlugin\Behat\Context\Setup\RelatedProductsContext"
        >
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="sylius.factory.order" />
            <argument type="service" id="sylius.factory.order_item" />
            <argument type="service" id="sylius.factory.customer" />
            <argument type="service" id="sm.factory" />
            <argument type="service" id="sylius.order_item_quantity_modifier" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service
            id="bitbag_sylius_upselling_plugin.behat.context.setup.elasticsearch"
            class="Tests\BitBag\SyliusUpsellingPlugin\Behat\Context\Setup\ElasticsearchContext"
        >
            <argument type="service" id="bitbag_sylius_upselling_plugin.behat.service.elasticsearch_commands" />
        </service>
    </services>
</container>
